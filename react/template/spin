(cfg_string (
  (name project_name)
  (prompt "Project name")
))

(cfg_string (
  (name project_slug)
  (prompt "Project slug")
  (default "{{ project_name | slugify }}")
))

(cfg_string (
  (name project_description)
  (prompt "Description")
  (default "")
))

(cfg_string (
  (name author_name)
  (prompt "Name of the author")
))

(cfg_list (
  (name css_framework)
  (prompt "Which CSS framework do you use?")
  (values ("TailwindCSS" "None"))
  (default "None")
))

(cfg_list (
  (name ci_cd)
  (prompt "Which CI/CD platform do you use")
  (values (Github None))
  (default Github)
))

(ignore (
  (files (config/postcss\.config\.js config/tailwind\.config\.js))
  (condition "{{ css_framework != 'TailwindCSS' }}")
))

(ignore (
  (files (\.github/.*))
  (condition "{{ ci_cd != 'Github' }}")
))

(post_install (
  (command yarn)
  (args (install))
  (description "üéÅ  Installing packages. This might take a couple minutes.")
))

(example_command (
  (name "yarn start")
  (description "Starts the development server.")
))

(example_command (
  (name "yarn build")
  (description "Bundles the app into static files for production.")
))

(example_command (
  (name "yarn test")
  (description "Starts the test runner.")
))

(cfg_string (
  (name project_name)
  (prompt "Project name")
))

(cfg_string (
  (name project_slug)
  (prompt "Project slug")
  (default "{{ project_name | slugify }}")
))

(cfg_string (
  (name project_description)
  (prompt "Description")
  (default "")
))

(cfg_string (
  (name author_name)
  (prompt "Name of the author")
))

(cfg_string (
  (name github_username)
  (prompt "Github username")
))

(cfg_list (
  (name syntax)
  (prompt "Which syntax do you use?")
  (values (Reason OCaml))
))

(ignore (
  (files (.*\.re .*\.rei))
  (condition "{{ syntax != 'Reason' }}")
))

(ignore (
  (files (.*\.ml .*\.mli \.ocamlformat))
  (condition "{{ syntax != 'OCaml' }}")
))

(post_install (
  (command esy)
  (args (install))
  (description "üéÅ  Installing packages. This might take a couple minutes.")
))

(post_install (
  (command esy)
  (args (pesy))
))

(post_install (
  (command esy)
  (args (dune build))
))
